<!DOCTYPE html>
<html lang="en">

<%- include('../partials/loginSignupHeader.ejs') %>

    <body>
        <% if ( customer===true ) { %>
            <%- include('../partials/homeNavbar.ejs') %>
                <% } else { %>
                    <%- include('../partials/guestNavbar.ejs') %>
                        <% } %>




                            <section class="wrapper mt-5">
                                <div class="container-fostrap  ">
                                    <div class="content">
                                        <div class="container mt-5">
                                            <div class="row justify-content-center">


                                                <div class="card col-xs-12 col-sm-7 mx-4">

                                                    <div id="carouselExampleControls" class="carousel slide"
                                                        data-bs-ride="carousel">
                                                        <div class="carousel-inner">
                                                            <div class="carousel-item active">
                                                                <img src="<%= products.image %>" class="d-block w-100"
                                                                    alt="...">
                                                            </div>
                                                            <div class="carousel-item">
                                                                <img src="<%= products.image %>" class="d-block w-100"
                                                                    alt="...">
                                                            </div>
                                                            <div class="carousel-item">
                                                                <img src="<%= products.image %>" class="d-block w-100"
                                                                    alt="...">
                                                            </div>
                                                        </div>
                                                        <button class="carousel-control-prev" type="button"
                                                            data-bs-target="#carouselExampleControls"
                                                            data-bs-slide="prev">
                                                            <span class="carousel-control-prev-icon"
                                                                aria-hidden="true"></span>
                                                            <span class="visually-hidden">Previous</span>
                                                        </button>
                                                        <button class="carousel-control-next" type="button"
                                                            data-bs-target="#carouselExampleControls"
                                                            data-bs-slide="next">
                                                            <span class="carousel-control-next-icon"
                                                                aria-hidden="true"></span>
                                                            <span class="visually-hidden">Next</span>
                                                        </button>
                                                    </div>

                                                    <!-- <a class="img-card-detail" href="">
                                                                <img src="<%= products.image %> " />
                                                            </a> -->


                                                </div>
                                                <div class="card col-xs-12 col-sm-3 mx-4 mb-5" id="card">


                                                    <div class="card-content ">
                                                        <h4 class="card-title">
                                                            <a class="text-danger"
                                                                href="http://www.fostrap.com/2016/03/bootstrap-3-carousel-fade-effect.html">
                                                                <%= products.productName %>
                                                            </a>
                                                        </h4>
                                                        <p>
                                                            Category - <%= products.productCategory %>
                                                        </p>
                                                        <h2 class="">
                                                            Rs.<%= products.cost %>
                                                        </h2>
                                                        <h4 class="text-primary">
                                                            <%= products.soldCount/products.stock*100 %>% Sold
                                                        </h4>
                                                        <p class="">
                                                            <%= products.description %>
                                                        </p>
                                                        <!-- <form action="submit">
                                                                    <input type="number" min="1" placeholder="1">
                                                                </form> -->
                                                    </div>
                                                    <div class="card-read-more-detail d-flex justify-content-center py-3">
                                                        <!-- <button
                                                            class="btn btn-primary btn-block btn-lg gradient-custom-4  text-light " onclick="addToCart('<%= products._id %>')">
                                                            Add to Cart
                                                        </button> -->
                                                        <% if(session) { %>
                                                            <div class="d-flex">
                                                                <a href="http://localhost:3000/user/addToCart/<%= products._id %>"> <button id="cartButton" class="btn btn-outline-dark mt-auto" >Add to Cart</button></a>
                                                            <% }else{ %>
                                                            <div class="d-flex">
                                                              <a href="/user"><button class="btn btn-outline-dark mt-auto" id="">Add to Cart</button></a>
                                                              <p id="exist" class="text-danger"></p>
                                                            </div>
                                                            <% } %>
                                                    </div>

                                                </div>


                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>





                            <%- include('../partials/footer.ejs') %>

                                <script
                                    src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                                    integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                                    crossorigin="anonymous"></script>
    </body>

</html>