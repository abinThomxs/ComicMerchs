<!DOCTYPE html>
<html lang="en">

<%- include('../partials/loginSignupHeader.ejs') %>

    <body>
        <!-- Jumbotron -->
        <div class="container col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="row g-0 align-items-center justify-content-center">
                <div class="col-lg-6 mb-5 mb-lg-0 mt-5 pt-5">
                    <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                        <div class="card-body p-5 shadow-5 text-center">
                            <h2 class="fw-bold mb-5">Edit Address</h2>
                            <form action="/user/changePassword" method="post" id="sign_form" name="sign_form">
                                <div class="row">
                                    <h4><%= message %> </h4>
                                    <div class="col-md-12 input-control my-3">
                                        <input type="password" class="form-control" id="currpassword"
                                            placeholder="Current Password" aria-label="password"
                                            name="currentPassword" />
                                        <div id="cpassworderror" class="error-message"></div>
                                    </div>
                                    <div class="col-md-6 input-control my-3">
                                        <input type="password" class="form-control" id="password"
                                            placeholder="New Password" aria-label="password" name="password" />
                                        <div id="passworderror" class="error-message"></div>
                                    </div>
                                    <div class="col-md-6 input-control my-3">
                                        <input type="password" class="form-control" id="conPassword"
                                            placeholder="Confirm Password" aria-label="conPassword"
                                            name="conPassword" />
                                        <div id="conpassworderror" class="error-message"></div>
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="submit-btn">Submit</button>
                                        <a href="/profile" class="btn ms-1 submit-btn">Cancel</a>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Jumbotron -->

        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
            integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3"
            crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.min.js"
            integrity="sha384-IDwe1+LCz02ROU9k972gdyvl+AESN10+x7tBKgc9I5HFtuNz0wWnPclzo6p9vxnk"
            crossorigin="anonymous"></script>





    </body>

</html>