<!DOCTYPE html>
<html lang="en">

<%- include('../partials/loginSignupHeader.ejs') %>
    <%- include('../partials/offcanvas.ejs') %>

        <body>

            <%- include('../partials/userNavbar.ejs') %>


                <section class="mt-4 col-sm-12 mt-5 mt-sm-0">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="/images/carousal4.png" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/carousal7.jpg" class="d-block w-100" alt="...">
                            </div>
                            <div class="carousel-item">
                                <img src="/images/carousal2.jpg" class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                </section>


                <section class="wrapper">
                    <div class="container-fostrap mt-5 pt-5">
                        <div>
                            <h1 class="heading my-5">
                                Best sellers of the month
                            </h1>
                        </div>
                        <div class="content">
                            <div class="container">
                                <div class="row">

                                    <% products.forEach( product=> { %>


                                        <div class="col-sm-12 col-md-4 px-md-5">
                                            <div class="card">
                                                <a class="img-card2"
                                                    href="http://localhost:3000/user/productDetail/<%= product._id %>">
                                                    <img src="<%= product.image[0].url %> " />
                                                </a>
                                                <div class="card-content">
                                                    <h4 class="card-title">
                                                        <a
                                                            href="">                                                            
                                                            Rs.<%= product.cost %>
                                                        </a>
                                                    </h4>
                                                    <p class="">
                                                        <%= product.productName %>
                                                    </p>
                                                </div>
                                                <div class="card-read-more">
                                                    <a href="http://localhost:3000/user/productDetail/<%= product._id %>"
                                                        class="btn btn-link btn-block">
                                                        View Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <% }) %>

                                </div>
                            </div>
                        </div>
                    </div>
                </section>


                <section class="wrapper">
                    <div class="container-fostrap mt-5 pt-5">
                        <div>
                            <h1 class="heading my-5">
                                Buy at half price...!!
                            </h1>
                        </div>
                        <div class="content">
                            <div class="container">
                                <div class="row">

                                    <% discounts.forEach( discount=> { %>


                                        <div class="col-sm-12 col-md-3">
                                            <div class="card">
                                                <a class="img-card2"
                                                    href="http://localhost:3000/user/productDetail/<%= discount._id %>">
                                                    <img src="<%= discount.image[0].url %> " />
                                                </a>
                                                <div class="card-content">
                                                    <h4 class="card-title">
                                                        <a
                                                            href="">
                                                            <del class="text-primary">Rs.<%= (discount.cost)*2 %></del>
                                                            Rs.<%= discount.cost %>
                                                        </a>
                                                    </h4>
                                                    <p class="">
                                                        <%= discount.productName %>
                                                    </p>
                                                </div>
                                                <div class="card-read-more">
                                                    <a href="http://localhost:3000/user/productDetail/<%= discount._id %>"
                                                        class="btn btn-link btn-block">
                                                        View Details
                                                    </a>
                                                </div>
                                            </div>
                                        </div>

                                        <% }) %>

                                </div>
                            </div>
                        </div>
                    </div>
                </section>



                <%- include('../partials/footer.ejs') %>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                        crossorigin="anonymous"></script>
        </body>

</html>