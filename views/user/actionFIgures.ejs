<!DOCTYPE html>
<html lang="en">

<%- include('../partials/loginSignupHeader.ejs') %>

    <body>

        <%- include('../partials/userNavbar.ejs') %>
            <%- include('../partials/offcanvas.ejs') %>


                <%- include('../partials/offcanvas.ejs') %>

                    

                    <section class="wrapper">
                        <div class="container-fostrap mt-5 pt-5">
                            <div>
                                <h1 class="heading my-5">
                                    Action Figures
                                </h1>
                            </div>
                            <div class="content">
                                <div class="container">
                                    <div class="row d-flex justify-content-center">
    
                                        <% actionFig.forEach( action=> { %>
    
    
                                            <div class="col-sm-12 col-md-3">
                                                <div class="card">
                                                    <a class="img-card2">
                                                        <img src="<%= action.image[0].url %> " />
                                                    </a>
                                                    <div class="card-content">
                                                        <h4 class="card-title text-center">
                                                            <a href="">                                                                
                                                                Rs.<%= action.cost %>
                                                            </a>
                                                            <% if(customer===true) { %>
                                                                <a onclick="sweet('<%= action._id %>')">
                                                                    <i id="wish" class="fa-regular fa-heart px-2"
                                                                        ></i></a>
                                                                        <a href="/addToCart/<%= action._id %>">
                                                                    <i class="fas fa-regular fa-cart-shopping px-2"></i></a>
                                                                <% }else{ %>
                                                                    <a href="/login">
                                                                        <i
                                                                            class="fas fa-regular fa-cart-shopping px-2"></i><i
                                                                            class="fa-regular fa-heart px-2"></i></a>
                                                                    <% } %>
                                                        </h4>
                                                        <p class="text-center">
                                                            <%= action.productName %>
                                                        </p>
                                                    </div>
                                                    <div class="card-read-more">
                                                        <a href="/productDetail/<%= action._id %>"
                                                            class="btn btn-link btn-block">
                                                            View Details
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
    
                                            <% }) %>
    
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>





                    <%- include('../partials/footer.ejs') %>
                    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
                    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>                    
                    <script>
                        function sweet(pid) {
                            $.ajax({
                                url: "/addToWishlist",
                                data: {
                                    pid,
                                },
                                method: "post",
                                success: () => {
                                    swal("Product Added", "Product added to your wishlist", "success")
                                        .then(() => {
                                            location.reload();
                                        });
                                },
                            });
                        }
                    </script>

                        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
                            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
                            crossorigin="anonymous"></script>
    </body>

</html>