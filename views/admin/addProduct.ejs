    <body>
        <%- include('../partials/adminHomeNav.ejs') %>
           

                <!-- Jumbotron -->
                <div class="container col-md-9 ms-sm-auto col-lg-10 px-md-4">
                    <div class="row g-0 align-items-center justify-content-center">
                        <div class="col-lg-6 mb-5 mb-lg-0 mt-5 pt-5">
                            <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                                <div class="card-body p-5 shadow-5 text-center">
                                    <h2 class="fw-bold mb-5">Add New Product</h2>
                                    <form action="" method="post">

                                        <!-- 2 column grid layout with text inputs for the first and last names -->
                                        <div class="row">
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <input type="text" id="form3Example1" name="productName"
                                                        class="form-control" />

                                                    <label class="form-label" for="form3Example1">Product Name</label><br>
                                                    <span id="productnameError" style="color: red;"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline flex-fill">
                                                    <select class="form-select form-control" aria-label="Default select example" 
                                                    id="productCategory" name="productCategory">
                                                        <% categories.forEach( (category) => { %> 
                                                        <option><%= category.name %> </option>
                                                        <% }) %>
                                                      </select>
                                                    <label class="form-label" for="form3Example2">Category</label><br>
                                                    <span id="productcategoryError" style="color: red;"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <input type="number" id="form3Example3" name="stock"
                                                        class="form-control" />
                                                    <label class="form-label" for="form3Example3">Stock Quantity</label><br>
                                                    <span id="stockError" style="color: red;"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <input type="cost" id="form3Example4" name="cost"
                                                        class="form-control" />
                                                    <label class="form-label" for="form3Example4">Cost</label><br>
                                                    <span id="costError" style="color: red;"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6 mb-4">
                                                <div class="form-outline">
                                                    <input type="number" id="form3Example4" name="soldCount"
                                                        class="form-control" />
                                                    <label class="form-label" for="form3Example4">Sold Count</label><br>
                                                    <span id="soldcountError" style="color: red;"></span>
                                                </div>
                                            </div>
                                            
                                            
                                        </div>

                                        
                                   

                                        <!-- Submit button -->
                                        <button type="submit" class="btn btn-primary btn-block mb-4">
                                            Submit
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
